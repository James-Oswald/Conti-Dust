    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Build & Launch",
            "url": "http://localhost:8000/build",
            "webRoot": "${workspaceFolder}/build",
            "preLaunchTask": "Build and Start",
            "postDebugTask": "Kill Server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch",
            "url": "http://localhost:8000/build",
            "webRoot": "${workspaceFolder}/build",
            "preLaunchTask": "Build and Start",
            "postDebugTask": "Kill Server"
        }
    ]
}